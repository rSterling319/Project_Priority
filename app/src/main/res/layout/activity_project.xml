<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <EditText
            android:id="@+id/projectName"
            android:layout_weight=".10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPersonName"
            android:hint="New Project"
            android:ems="10"
            android:layout_margin="12dp"
            android:textSize="20dp"
            />

        <!--Details-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".10"
            android:orientation="vertical"
            android:background="@drawable/bottom_line"
            android:layout_marginBottom="12dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:clickable="true"
                android:onClick="detail_toggle_contents">
                <ImageView
                    android:id="@+id/detailImgToggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".10"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_add_black_24dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".90"
                    android:text="Details"
                    android:textSize="25dp"
                    />
            </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/bottom_line"
            android:id="@+id/details_drop"
            >


    <LinearLayout
        android:layout_weight=".10"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--On-To-Do-List-->
        <LinearLayout
            android:layout_weight=".10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp">
            <Switch
                android:id="@+id/toDoSwitch"
                android:layout_weight=".8"
                android:switchMinWidth="56dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="On To-Do List"
                android:textSize="20dp"
                />
            <TextView
                android:id="@+id/switchText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".2"
                android:text="nope"
                android:textAlignment="center"
                android:paddingTop="10dp"
                />


        </LinearLayout>
        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".50"
            android:layout_marginTop="16dp"
            />
        <TextView
            android:id="@+id/seekBarProgress"
            android:layout_weight=".50"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:text="Progress"
            android:textSize="18dp"/>
    </LinearLayout>

        <!--Deadline-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".10"
            android:orientation="horizontal"
            android:paddingRight="16dp"
            >
            <TextView
                android:layout_weight=".40"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Deadline"
                android:textSize="20dp"
                android:gravity="center"/>
            <Button
                android:id="@+id/dateButton"
                android:layout_weight=".60"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="setDate"
                android:textSize="20dp" />
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:background="@drawable/full_border"
                >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Short Description"
                android:textSize="16dp"
                android:background="@drawable/bottom_line"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLength="200"
                android:hint="Enter Description Here"/>
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>

        <!--Costs-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".10"
            android:orientation="vertical"
            android:background="@drawable/bottom_line"
            android:layout_marginBottom="12dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:clickable="true"
                android:onClick="cost_toggle_contents">
            <ImageView
                android:id="@+id/costImgToggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".10"
                android:layout_gravity="center"
                android:src="@mipmap/ic_add_black_24dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".90"
                android:text="Costs"

                android:textSize="25dp"
                />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/cost_toggle_clk"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Price Estimate"
                        android:textSize="18dp"
                        android:layout_weight=".5"
                        android:textAlignment="center"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight=".5"
                        android:text="Price Actual"
                        android:textSize="18dp"
                        android:textAlignment="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <Spinner
                    android:id="@+id/cost_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:paddingRight="25dp"
                    android:layout_marginRight="10dp"
                    android:textSize="16dp"
                    android:layout_gravity="center_horizontal"
                    android:entries="@array/costs_array"
                    android:textAlignment="center"
                    android:spinnerMode="dialog"
                    />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight=".05"
                        android:text="$"
                        android:textSize="16dp"
                        android:textAlignment="center"
                        android:layout_gravity="center"

                        />
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight=".95"
                        android:layout_gravity="center_horizontal"
                        android:inputType="numberDecimal"
                        />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!--Materials-->
        <LinearLayout
            android:id="@+id/materials_drop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".10"
            android:orientation="vertical"
            android:clickable="true"
            android:onClick="materials_toggle_contents"
            android:background="@drawable/bottom_line"
            android:layout_marginBottom="12dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/material_tog_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".1"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_add_black_24dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".9"
                    android:text="Materials"
                    android:textSize="25dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/materials_toggle_clk"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textMultiLine"
                    android:scrollbars="vertical"
                    android:hint="Enter Materials Here"/>
            </LinearLayout>
        </LinearLayout>

        <!--Sub-Tasks-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".10"
            android:orientation="vertical"
            android:background="@drawable/bottom_line"
            android:layout_marginBottom="12dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:clickable="true"
                android:onClick="sub_tasks_toggle_contents">
                <ImageView
                    android:id="@+id/subTask_tog_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".1"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_add_black_24dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".9"
                    android:text="Sub-Tasks"
                    android:textSize="25dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/subTask_drop">
                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:dividerHeight="4dp">

                </ListView>

            </LinearLayout>
        </LinearLayout>

        <!--Location-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".10"
            android:orientation="vertical"
            android:background="@drawable/bottom_line"
            android:layout_marginBottom="12dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".1"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_add_black_24dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".9"
                    android:text="Location"
                    android:textSize="25dp"/>
            </LinearLayout>
        </LinearLayout>





    </LinearLayout>
</ScrollView>



</android.support.constraint.ConstraintLayout>